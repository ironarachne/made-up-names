{
  "name": "@ironarachne/made-up-names",
  "version": "2.2.1",
  "description": "A module for generating fictional names",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "biome": "biome ci src/*.ts",
    "build": "tsc",
    "docs": "typedoc --out docs src/index.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleDirectories": [
      "<rootDir>/../",
      "<rootDir>/src/",
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "rootDir": ".",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ironarachne/made-up-names.git"
  },
  "keywords": [
    "names"
  ],
  "author": "Ben Overmyer <ben@overmyer.net>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ironarachne/made-up-names/issues"
  },
  "homepage": "https://github.com/ironarachne/made-up-names#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@biomejs/biome": "1.5.3",
    "@jest/globals": "^29.1.1",
    "@types/lodash": "^4.14.199",
    "babel-jest": "^29.1.1",
    "jest": "^29.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@ironarachne/rng": "^2.1.1",
    "@ironarachne/word-generator": "^1.2.0",
    "@ironarachne/words": "^1.0.1",
    "lodash": "^4.17.21"
  }
}
